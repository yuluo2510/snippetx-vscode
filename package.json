{
  "name": "snippetx",
  "displayName": "SnippetX",
  "description": "ðŸš€ VS Code extension for intelligent code snippet management - save, search, and sync your code snippets with zero friction",
  "version": "0.1.0",
  "publisher": "snippetx",
  "author": {
    "name": "SnippetX Team",
    "email": "hello@snippetx.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/SnippetX.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "snippet",
    "code-management",
    "ai",
    "productivity",
    "code-reuse"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snippetx.saveSnippet",
        "title": "Save Code Snippet",
        "category": "SnippetX"
      },
      {
        "command": "snippetx.searchSnippets",
        "title": "Search Snippets",
        "category": "SnippetX"
      },
      {
        "command": "snippetx.recentSnippets",
        "title": "Recent Snippets",
        "category": "SnippetX"
      },
      {
        "command": "snippetx.favorites",
        "title": "Favorites",
        "category": "SnippetX"
      }
    ],
    "keybindings": [
      {
        "command": "snippetx.saveSnippet",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      },
      {
        "command": "snippetx.searchSnippets",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "snippetx.saveSnippet",
          "when": "editorHasSelection"
        },
        {
          "command": "snippetx.searchSnippets"
        },
        {
          "command": "snippetx.recentSnippets"
        },
        {
          "command": "snippetx.favorites"
        }
      ],
      "editor/context": [
        {
          "command": "snippetx.saveSnippet",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste"
        }
      ]
    },
    "configuration": {
      "title": "SnippetX",
      "properties": {
        "snippetx.apiUrl": {
          "type": "string",
          "default": "https://api.snippetx.dev",
          "description": "API endpoint for syncing snippets"
        },
        "snippetx.githubToken": {
          "type": "string",
          "description": "GitHub token for repository syncing"
        },
        "snippetx.repository": {
          "type": "string",
          "description": "GitHub repository to store snippets (format: owner/repo)"
        },
        "snippetx.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic syncing with GitHub"
        },
        "snippetx.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for snippet actions"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippetx",
          "title": "SnippetX",
          "icon": "$(note)"
        }
      ]
    },
    "views": {
      "snippetx": [
        {
          "id": "snippetx.explorer",
          "name": "My Snippets",
          "when": "snippetx:initialized"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:watch": "tsc -watch -p ./",
    "backend:dev": "nodemon --exec ts-node src/backend/index.ts",
    "backend:build": "tsc -p ./tsconfig.backend.json",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "dev:full": "concurrently \"npm run compile:watch\" \"npm run backend:dev\"",
    "start:backend": "npm run backend:dev"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@types/express": "^4.17.15",
    "@types/pg": "^8.6.6",
    "ts-node": "^10.9.1",
    "nodemon": "^2.0.20",
    "concurrently": "^7.6.0",
    "vsce": "^3.0.0"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "express": "^4.18.2",
    "pg": "^8.8.0",
    "redis": "^4.5.1",
    "uuid": "^9.0.0",
    "openai": "^3.2.1",
    "dotenv": "^16.0.3"
  }
}